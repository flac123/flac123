CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
AO_LIBS = @AO_LIBS@
FLAC_LIBS = @FLAC_LIBS@
POPT_LIBS = @POPT_LIBS@

export CC
export CFLAGS
export LDFLAGS
export LIBS
export AO_LIBS
export FLAC_LIBS
export POPT_LIBS

SUBDIRS = flac123

all: all-recursive

clean: clean-local clean-recursive

install: install-recursive

distclean: clean
	rm -f Makefile config.cache config.status config.log

maintainerclean: distclean
	rm -f configure

all-recursive:
	@for dir in $(SUBDIRS) ; do cd $$dir && $(MAKE) all && cd .. ; done

install-recursive:
	@for dir in $(SUBDIRS) ; do cd $$dir && $(MAKE) install && cd .. ; done

clean-recursive:
	@for dir in $(SUBDIRS) ; do cd $$dir && $(MAKE) clean && cd .. ; done

clean-local:
	rm -f core
